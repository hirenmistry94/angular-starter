div(ng-app='LoginForm')
  md-content.login-form(ng-app='LoginForm', ng-controller='Ctrl', layout='row', layout-align='space-around', layout-padding='layout-padding', ng-cloak='ng-cloak')
    md-card(flex='flex', flex-gt-sm='50', flex-gt-md='33')
      md-toolbar
        .md-toolbar-tools
          h2
            span Login Form
      md-card-content
        form(name='Form')
          md-input-container.md-block
            label Login
            input(type='text', name='email', ng-model='vm.formData.email', placeholder='login', required='')
            div(ng-messages='Form.email.$error', role='alert', multiple='')
              .my-message(ng-message='required') Please enter your email.
          md-input-container.md-block
            label Password
            input(type='password', name='password', ng-model='vm.formData.password', placeholder='password', required='', md-maxlength='16')
            div(ng-messages='Form.password.$error', role='alert', multiple='')
              .my-message(ng-message='required') Please enter your password.
              .my-message(ng-message='md-maxlength') Too long.
          md-button.md-raised.md-primary(ng-disabled='!Form.$valid', ng-click='vm.submit()') &nbsp Login &nbsp
  // Angular Material Dependencies
script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.4.6/angular.min.js')
script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.4.6/angular-animate.min.js')
script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.4.6/angular-messages.js')
script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.4.6/angular-aria.min.js')
script(src='//ajax.googleapis.com/ajax/libs/angular_material/1.0.0/angular-material.min.js')
script(src='//cdn.jsdelivr.net/angular-material-icons/0.4.0/angular-material-icons.min.js')
